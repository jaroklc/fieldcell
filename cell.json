{
    "$id": "https://use.fieldcell.org/schema/v0.1.0/cell.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "A fieldcell.org matrix cell schema, the basic building element for flat data representations of decision models with any number of dimensions, nesting depth, and complexity. It enables globally reusable fragments of decision data.",
    "type": "object",
    "required": [
        "fieldcell_id",
        "fieldcell_payload",
        "fieldcell_parent",
        "fieldcell_type"
    ],
    "properties": {
        "fieldcell_id": {
            "type": "string",
            "description": "The cell's global identifier (URL).",
            "format": "uri"
        },
        "fieldcell_type": {
            "type": "string",
            "description": "The cell's type global identifier (URL). See fieldcell.org for standardized cell types.",
            "format": "uri"
        },
        "fieldcell_payload": {
            "type": "string",
            "description": "The Fieldcell object's text payload."
        },
        "fieldcell_created_at": {
            "type": "number",
            "description": "The cell's creation timestamp as the Unix epoch value."
        },
        "fieldcell_parent": {
            "type": "string",
            "description": "The cell parent's global identtifier (URL). It is the fieldcell_id value of the parent cell.",
            "format": "uri"
        },
        "coordinates": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "$ref": "#/$defs/coordinate"
            }
        }
    },
    "$defs": {
        "coordinate": {
            "type": "object",
            "required": [
                "di",
                "dv"
            ],
            "properties": {
                "di": {
                    "type": "string",
                    "description": "The dimension definition's global identifier (URI)",
                    "format": "uri"
                },
                "dv": {
                    "type": "string",
                    "description": "Coordinate value associated with the coordinate dimension specified in di"
                }
            }
        }
    }
}